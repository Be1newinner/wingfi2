{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@db/*": ["packages/db/*"],
      "@types/*": ["packages/types/*"],
      "@utils/*": ["packages/utils/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
